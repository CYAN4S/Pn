<Window x:Class="Pn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pn"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="622.541" MouseMove="Window_MouseMove" MouseLeftButtonDown="Window_MouseLeftButtonDown" MouseLeftButtonUp="Window_MouseLeftButtonUp">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="284*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Width="154" Grid.Row="1">
            <Label x:Name="label" Content="Label" Width="144" Height="37"/>
            <Label x:Name="label_Copy" Content="Label" Width="144" Height="37"/>
            <Label x:Name="label_Copy1" Content="Label" Width="144" Height="37"/>
            <Label x:Name="label_Copy2" Content="Label" Width="144" Height="37"/>
            <Label x:Name="label_Copy3" Content="Label" Width="144" Height="37"/>
            <Label x:Name="label_Copy4" Content="Label" Width="144" Height="37"/>
            <Label x:Name="label_Copy5" Content="Label" Width="144" Height="37"/>
            <Label x:Name="label_Copy6" Content="Label" Width="144" Height="37"/>
        </ListBox>
        <Label x:Name="label1" Content="문서" Margin="0,0,85.6,0" Height="40" VerticalAlignment="Top"/>
        <Label x:Name="label2" Grid.Column="1" HorizontalAlignment="Right" Width="452" RenderTransformOrigin="0.5,0.5">
        </Label>
        <Grid Grid.Column="1" HorizontalAlignment="Left" Height="200
              " Margin="370,50,0,0" Grid.Row="1" VerticalAlignment="Top" Width="81">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="button" Content="Button" RenderTransformOrigin="0.368,-0.656" Grid.Row="1" Click="ColorSelectorButton"/>
            <Button x:Name="button_Copy" Content="Button" RenderTransformOrigin="0.368,-0.656" Click="PenButtonClick"/>
            <Button x:Name="button_Copy1" Content="Button" RenderTransformOrigin="0.368,-0.656" Grid.Row="2"/>
            <Button x:Name="button_Copy2" Content="Button" RenderTransformOrigin="0.368,-0.656" Grid.Row="3"/>
            <Button x:Name="button_Copy3" Content="Button" RenderTransformOrigin="0.368,-0.656" Grid.Row="1" Grid.Column="1" Margin="0,0,1,0" Click="PenWidthButton"/>
            <Button x:Name="button_Copy4" Content="Button" RenderTransformOrigin="0.368,-0.656" Grid.Column="1" Margin="0,0,1,0" Click="EraserButtonClick"/>
            <Button x:Name="button_Copy5" Content="Button" RenderTransformOrigin="0.368,-0.656" Grid.Row="2" Grid.Column="1" Margin="0,0,1,0"/>
            <Button x:Name="button_Copy6" Content="Button" RenderTransformOrigin="0.368,-0.656" Grid.Row="3" Grid.Column="1" Margin="0,0,1,0"/>
            <Button x:Name="button_Copy7" Content="Button" RenderTransformOrigin="0.368,-0.656" Grid.Row="4"/>
            <Button x:Name="button_Copy8" Content="Button" RenderTransformOrigin="0.368,-0.656" Grid.Row="4" Grid.Column="1" Margin="0,0,1,0"/>
        </Grid>
        <Button x:Name="button1" Content="저장&#xD;&#xA;" Grid.Column="1" HorizontalAlignment="Left" Margin="302.4,22,0,0" VerticalAlignment="Top" Width="30" Height="18"/>
        <Button x:Name="button1_Copy" Content="실행취소&#xD;&#xA;" Grid.Column="1" HorizontalAlignment="Left" Margin="332.4,22,0,0" VerticalAlignment="Top" Width="65" Height="18"/>
        <Button x:Name="button1_Copy2" Content="다시실행" Grid.Column="1" HorizontalAlignment="Left" Margin="397.4,22,0,0" VerticalAlignment="Top" Width="65" Height="18"/>

        <Grid Name="CanvasGrid" Grid.Column="1" Margin="10.4,10,119,59.8" Grid.Row="1">
            <Border BorderBrush="Black" BorderThickness="1">
                <Canvas x:Name="MainCanvas"/>
            </Border>
        </Grid>
        
        <Grid Name="ColorSelectorGrid" Grid.Column="1" HorizontalAlignment="Left" Height="289" Margin="143.4,22,0,0" VerticalAlignment="Top" Width="222" Grid.RowSpan="2" Visibility="Hidden">

            <xctk:ColorCanvas x:Name="ColorSelector"/>
            <Button x:Name="button2" Content="Button" HorizontalAlignment="Left" Margin="137,270,0,0" Width="75" Click="ColorSelectOKButton"/>
        </Grid>
        
        <Button x:Name="button3" Content="Button" Margin="68,10,9.6,11" Click="button3_Click_1"/>
        <Grid x:Name="PenWidthGrid" Grid.Column="1" HorizontalAlignment="Left" Height="176" Margin="302.4,74,0,0" Grid.Row="1" VerticalAlignment="Top" Width="46" Background="#FFA3A3A3"  Visibility="Hidden">
            <Slider x:Name="PenWidth" HorizontalAlignment="Left" Margin="-47,67,-45,0" VerticalAlignment="Top" Width="138" RenderTransformOrigin="0.5,0.5" TickPlacement="BottomRight" TickFrequency="1" IsSnapToTickEnabled="True" ValueChanged="PenWidth_ValueChanged">
                <Slider.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-90"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Slider.RenderTransform>
            </Slider>
            <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="0,153,0,0" TextWrapping="Wrap" Text="{Binding Value, ElementName=PenWidth}" VerticalAlignment="Top" Width="46"/>
        </Grid>


    </Grid>
</Window>
